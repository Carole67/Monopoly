<Window
    x:Class="Monopoly.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        xmlns:BoardComponent="clr-namespace:Monopoly.Model.Component.Board"
        xmlns:View="clr-namespace:Monopoly.View.Component.Board"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1800">
    <Window.Resources>
        <DataTemplate DataType="{x:Type BoardComponent:Board}">
            <View:BoardView/>
        </DataTemplate>
    </Window.Resources>
</Window>
